@using OnlineTrading.Web.Models.DeliveryService
@model List<DeliveryServiceListViewModel>

@{
    ViewData["Title"] = "Delivery Services";
}

<h2>All Delivery Services</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th style="width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Price.ToString("C")</td>
                <td>
                    <a asp-action="Update" asp-route-id="@service.Id" class="btn btn-warning btn-sm me-2">Update</a>
                    <form asp-action="Delete" asp-route-id="@service.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this delivery service?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

