@using OnlineTrading.Web.Models.Order
@model OrderDetailsViewModel

@{
    ViewData["Title"] = $"Order #{Model.OrderId} Details";
}

<h2>Order Details</h2>

<div class="mb-4">
    <p><strong>Order ID:</strong> @Model.OrderId</p>
    <p><strong>Order Date:</strong> @Model.OrderDate.ToString("f")</p>
    <p><strong>Delivery Service:</strong> @Model.DeliveryServiceName</p>
    <p><strong>Bank Account:</strong> @Model.BankAccountNumber</p>
    <p><strong>Shop:</strong> @Model.ShopName</p>
</div>

<h4>Products in Order</h4>
@if (Model.Products != null && Model.Products.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th class="text-end">Price</th>
                <th class="text-end">Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td class="text-end">@product.Price.ToString("C")</td>
                    <td class="text-end">@product.Quantity</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end fw-bold">Total Price:</td>
                <td class="text-end fw-bold">@Model.TotalPrice.ToString("C")</td>
            </tr>
        </tfoot>
    </table>
}
else
{
    <p>No products found in this order.</p>
}

<a asp-action="Index" class="btn btn-secondary mt-3">Back to Orders</a>

